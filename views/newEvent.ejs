<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nowe wydarzenie</title>
  <link rel="stylesheet" href="/css/styles.css">
  <!-- GOOGLE PLACES API -->
  <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&libraries=places"></script>
</head>
<body>

  <!-- Ortak navbar -->
  <%- include('partials/navbar') %>

  <div class="container">
    <h2>Utwórz nowe wydarzenie</h2>

    <form action="/events" method="POST">
      <label for="name">Nazwa wydarzenia:</label>
      <input type="text" id="name" name="name" required placeholder="np. Hackathon 2025" />

      <label for="date">Data wydarzenia:</label>
      <input type="date" id="date" name="date" required />

      <label for="location">Miejsce:</label>
      <input
        type="text"
        id="location"
        name="location"
        placeholder="np. Warszawa"
        required
        pattern=".{3,}"
        title="Podaj lokalizację co najmniej 3 znaki." />

      <label for="imageUrl">Link do zdjęcia (opcjonalnie):</label>
      <input type="url" id="imageUrl" name="imageUrl" placeholder="https://..." />

      <label for="guestList">Lista gości (oddzielona przecinkami):</label>
      <textarea id="guestList" name="guestList" rows="3" placeholder="jan.kowalski, anna.nowak"></textarea>

      <button type="submit" class="primary-button">➕ Dodaj wydarzenie</button>
    </form>

    <p style="margin-top: 20px;">
      <a href="/events">← Wróć do wydarzeń</a>
    </p>
  </div>

  <!-- Autocomplete Script -->
  <script>
    function initAutocomplete() {
      const input = document.getElementById('location');
      const autocomplete = new google.maps.places.Autocomplete(input, {
        types: ['(cities)'],
        componentRestrictions: { country: 'pl' }
      });
    }

    document.addEventListener("DOMContentLoaded", initAutocomplete);
  </script>

</body>
</html>
